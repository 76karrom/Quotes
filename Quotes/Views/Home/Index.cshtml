@{
    ViewData["Title"] = "Welcome to Quotes";
}


<div class="container-fluid px-0">
    <!-- Hero Section -->
    <div class="hero-gradient text-white py-5">
        <div class="container py-5">
            <div class="row align-items-center g-5">
                <div class="col-lg-6 mx-auto text-center">
                    <h1 class="display-3 fw-bold mb-3">Get the worlds wisdom to your mailbox</h1>
                    <p class="lead mb-4">
                        Discover words that inspire, challenge, and uplift. From timeless wisdom to hidden gems, get the best quotes delivered straight to your inbox. 
                        Subscribe today and never miss a spark of inspiration.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-center mb-4">
                        <a asp-controller="Newsletter" asp-action="Subscribe"
                           class="btn btn-light btn-lg px-4 shadow">
                            <i class="fas fa-envelope me-2"></i>Subscribe Now
                        </a>
                    </div>
                    <div>
                        <h1>Karin Roman</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>